<h1>Edit article</h1>

<% if @article.errors.any?  %>
<h2>The Following errors prevented article creation</h2>
    <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
<% end %>

<%= form_for( @article, url: article_path) do |f|  %>

    <p>
        <%= f.label :title %> <br/>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :description %> <br/>
        <%= f.text_area :description %>
    </p>
    <p>
     <%= f.submit %>
    </p>

<% end %> 